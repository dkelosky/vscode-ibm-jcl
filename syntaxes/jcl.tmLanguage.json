{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Job Control Language",
  "patterns": [
    {
      "include": "#jcl_syntax"
    }
  ],
  "repository": {
    "jcl_syntax": {
      "patterns": [
        {
          "include": "#lineTooLong"
        },
        {
          "include": "#lineComment"
        },
        {
          "include": "#parseLine"
        },
        {
          "include": "#jclArgumentLine"
        },
        {
          "include": "#jclLineStart"
        }
      ]
    },
    "additionaljclHighlight": {
      "patterns": [
        {
          "include": "#labels"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#numbers"
        }
      ]
    },
    "lineTooLong": {
      "patterns": [
        {
          "name": "invalid.illegal.jcl",
          "match": "^.{81,}"
        }
      ]
    },
    "lineComment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jcl",
          "match": "^(\\/\\/\\*.{68,68})(.*)",
          "captures": {
            "1": {
              "name": "comment.line.double-slash.jcl"
            },
            "2": {
              "patterns": [
                {
                  "match": "\\s(.{0,8})",
                  "captures": {
                    "1": {
                      "patterns": [
                        {
                          "include": "#sequenceNumbers"
                        }
                      ]
                    }
                  }
                },
                {
                  "match": "([^\\s])(.{0,8})",
                  "captures": {
                    "1": {
                      "name": "invalid.illegal.jcl"
                    },
                    "2": {
                      "patterns": [
                        {
                          "include": "#sequenceNumbers"
                        }
                      ]
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "name": "comment.line.double-slash.jcl",
          "match": "\\/\\/\\*.*"
        }
      ]
    },
    "parseLine": {
      "patterns": [
        {
          "match": "^(.{71,71})([^\\s])(.{0,8})",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#jclArgumentLine"
                },
                {
                  "include": "#jclLineStart"
                }
              ]
            },
            "2": {
              "name": "keyword.other.jcl"
            },
            "3": {
              "patterns": [
                {
                  "include": "#sequenceNumbers"
                }
              ]
            },
            "5": {
              "patterns": [
                {
                  "match": "\\S.*",
                  "name": "invalid.illegal"
                }
              ]
            }
          }
        },
        {
          "match": "^(.{71,71})(\\s?)(.{0,8})$",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#jclArgumentLine"
                },
                {
                  "include": "#jclLineStart"
                }
              ]
            },
            "3": {
              "patterns": [
                {
                  "include": "#sequenceNumbers"
                }
              ]
            }
          }
        }
      ]
    },
    "jclLineStart": {
      "patterns": [
        {
          "match": "^([^*]\\S*)?\\s+(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.function.jcl"
            },
            "2": {
              "patterns": [
                {
                  "include": "#jclInstruction"
                }
              ]
            }
          }
        }
      ]
    },
    "jclInstruction": {
      "patterns": [
        {
          "match": "(IF\\s)(.*)(THEN|OR)(.*)",
          "name": "keyword.control.jcl",
          "captures": {
            "1": {
              "name": "keyword.other.jcl"
            },
            "2": {
              "name": "keyword.operator.jcl"
            },
            "3": {
              "name": "keyword.other.jcl"
            },
            "4": {
              "patterns": [
                {
                  "include": "#jclArguments"
                }
              ]
            }
          }
        },
        {
          "match": "(\\S+)\\s*(.*)",
          "captures": {
            "1": {
              "name": "keyword.other.jcl"
            },
            "2": {
              "patterns": [
                {
                  "include": "#jclArguments"
                }
              ]
            }
          }
        }
      ]
    },
    "jclArgumentLine": {
      "patterns": [
        {
          "match": "^\\s+(\\S+=.*)$",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#jclArguments"
                }
              ]
            }
          }
        }
      ]
    },
    "jclArguments": {
      "patterns": [
        {
          "include": "#stringType"
        },
        {
          "include": "#quoteType"
        },
        {
          "match": "(\\S*)(.*)",
          "captures": {
            "1": {
              "name": "keyword.control.jcl",
              "patterns": [
                {
                  "include": "#additionaljclHighlight"
                }
              ]
            },
            "2": {
              "name": "comment.line.double-slash.jcl"
            }
          }
        },
        {
          "match": "\\s.*",
          "name": "comment.line.double-slash.jcl"
        }
      ]
    },
    "stringType": {
      "patterns": [
        {
          "match": "(\\S*?)('.*?')(.*)",
          "captures": {
            "1": {
              "name": "keyword.control.jcl",
              "patterns": [
                {
                  "include": "#additionaljclHighlight"
                }
              ]
            },
            "2": {
              "name": "string.quoted.single.jcl"
            },
            "3": {
              "patterns": [
                {
                  "include": "#jclArguments"
                }
              ]
            }
          }
        }
      ]
    },
    "quoteType": {
      "patterns": [
        {
          "match": "(\\S*?)([LKNT]')(.*)",
          "captures": {
            "1": {
              "name": "keyword.control.jcl",
              "patterns": [
                {
                  "include": "#additionaljclHighlight"
                }
              ]
            },
            "2": {
              "name": "support.type.jcl"
            },
            "3": {
              "patterns": [
                {
                  "include": "#jclArguments"
                }
              ]
            }
          }
        }
      ]
    },
    "labels": {
      "match": "[*]",
      "name": "support.function.jcl"
    },
    "operators": {
      "match": "[=(),+]",
      "name": "keyword.operator.jcl"
    },
    "numbers": {
      "match": "(?<=[=(),*\\s+])-?\\d*(?=[=(),*+\\s]|$)",
      "name": "constant.numeric.jcl"
    },
    "sequenceNumbers": {
      "name": "constant.numeric.jcl",
      "match": ".*"
    }
  },
  "scopeName": "source.jcl"
}

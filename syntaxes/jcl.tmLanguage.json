{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Job Control Language",
	"patterns": [
		{
			"include": "#jcl_syntax"
		}
	],
	"repository": {
		"jcl_syntax": {
			"patterns": [
				{
					"include": "#lineComment"
				}
			]
		},
		"lineComment": {
			"_description": "All statements that have a * in column 1",
			"patterns": [
				{
					"name": "comment.line.double-slash.hlasm",
					"match": "^(\\/\\/\\*.{68,68})(.*)",
					"captures": {
						"1": {
							"name": "comment.line.double-slash.hlasm"
						},
						"2": {
							"patterns": [
								{
									"match": "\\s(.{0,8})",
									"captures": {
										"1": {
											"_description": "SEQUENCE NUMBERS!!!!!",
											"patterns": [
												{
													"include": "#sequenceNumbers"
												}
											]
										}
									}
								},
								{
									"match": "([^\\s])(.{0,8})",
									"captures": {
										"1": {
											"name": "invalid.illegal.hlasm"
										},
										"2": {
											"_description": "SEQUENCE NUMBERS!!!!!",
											"patterns": [
												{
													"include": "#sequenceNumbers"
												}
											]
										}
									}
								}
							]
						}
					}
				},
				{
					"name": "comment.line.double-slash.hlasm",
					"match": "\\/\\/\\*.*"
				}
			]
		},
		"sequenceNumbers": {
			"name": "constant.numeric.jcl",
			"match": ".*"
		}
	},
	"scopeName": "source.jcl"
}